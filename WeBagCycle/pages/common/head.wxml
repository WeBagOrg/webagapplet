<template name="head">
  <view class='userinfo'>
    <view class='content'>
      <view>
        <view class='avatar_border'></view>
        <open-data class='avatar' type="userAvatarUrl"></open-data>
      </view>
      <view class='userinfo_wrapper'>
        <view class='asset'>
          <text>资产</text>
          <text class='color'>0.00</text>
        </view>
        <view class='address'>
          <text>地址</text>
          <view>
            <open-data type="userProvince" class='color' lang="zh_CN"></open-data>
            <open-data type="userCity" class='color' lang="zh_TW"></open-data>
          </view>
        </view>
      </view>
      <view class='nickName'>
        <open-data type="userNickName"></open-data>
      </view>
    </view>
    <view class='head_bg'>
      <image src="../../image/head_bg.png"></image>
    </view>
  </view>
</template>