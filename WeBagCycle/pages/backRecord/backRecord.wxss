/* pages/backRecord/backRecord.wxss */
@import "../user/user.wxss";
@import '../../utils/refreshView.wxss';
.item-style{  
  padding: 30rpx;  
  font-size: 40rpx;  
  text-align: center;  
  border-top: 2rpx solid #eee;  
}  
.backRecord {
  width: 100%;
  margin-top:14rpx; 
  background-size:100%;
  background-image: url(https://www.webagcycle.com/webagapplet/list-bg.png);
}

.backRecord .header {
  display: flex;
  width: 100%; 
  height:62rpx;
  line-height: 62rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.backRecord .header .header-item{
  flex: 1;
  text-align: center;
}
.backRecord .list-item{
  display: flex;
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 1px solid #eee;
  font-size:28rpx;
}
.backRecord .list-item .info{
  flex: 1;
  text-align: center;
}
